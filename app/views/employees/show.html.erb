<% provide(:title, @employee.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @employee %>
        <%= @employee.name %>
      </h1>
      <%= link_to 'Edit Profile', edit_employee_path %>
        <div class="row"> 
    <%= link_to 'Back to employee list', employees_path %> 
  </div> 
    </section>
    <section>
      <%= link_to 'Create a new request', new_request_path, class: "btn btn-small btn-primary" %></section>
