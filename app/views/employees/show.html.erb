<% provide(:title, @employee.name) %>

<!DOCTYPE html>
  <html>
    <head>
    <title>Bootstrap 101 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    </head>
  </html>
 


<h3>
    <%= @employee.name %>
</h3>
  
<div>
  <%= gravatar_for @employee %>
</div>

<div class="offset2">
<div class="employees">
<p>
    Name:
    <%= @employee.name %>
</p>

<p>
    Email:
    <%= @employee.email %>
</p>

<p>
    Office:
    <%= @employee.location %>
</p>

<p>
    Department:
    <%= @employee.department %>
</p>

<p>
    Group:
    <%= @employee.group %>
</p>

<p>
    Job Title:
    <%= @employee.job_title %>
</p>

<p>
    Immediate Supervisor:
    <%= @employee.supervisor %>
</p>

<p>
    Years with Company:
    <%= @employee.years_at_company %>
</p>

<p>  
  Employee Skills:
  <% @employee.employee_skills.each do |es| %>    
  <%= es.skill.name %> 
  <% end %>  
</p>

<p>Target Skills:
  <% @employee.target_skills.each do |ts| %>    
  <%= ts.skill.name %>  
  <% end %>  
</p>




  














