<% provide(:title, @employee.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @employee %>
        <%= @employee.name %>
      </h1>
    </section>
  </aside>
</div>

<div class="employee">

<p>
  <b>Email:</b>
  <%= @employee.email %>
</p>

<p>
  <b>Skills:</b>
  <%= @employee.skills %>
</p>

<p>
  <b>Interests:</b>
  <%= @employee.interests %>
</p>

<p>
  <b>Group:</b>
  <%= @employee.group %>
</p>

<p>
  <b>Location:</b>
  <%= @employee.location %>
</p>

<p>
  <b>Current Project:</b>
  <%= @employee.current_project %>
</p>
</div>

