<h1>List of Requests</h1>

<div>
    Employee <% provide('request.employee_id') %>
</div>

<p> 
<% @requests.each do |request| %>  
    <%= request.employee_id %>
    <% end %>
</p>

<table>
  <tr>
    <th>Group</th>
    <th>Location</th>
    <th>Skills needed</th>
    <th>Start date</th>
    <th>Stop date</th>
    <th>Request</th>
    <th>Client</th>
    <th>Project</th>
    <th>Request ID</th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.group %></td>
    <td><%= request.location %></td>
    <td><%= request.skills_needed %></td>
    <td><%= request.start_date %></td>
    <td><%= request.stop_date %></td>
    <td><%= request.request %></td>
    <td><%= request.client %></td>
    <td><%= request.project %></td>
    <td><%= request.id %></td>    
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Request', new_request_path %>
