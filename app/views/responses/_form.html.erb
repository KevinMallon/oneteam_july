<%= form_for [@request, @response] do |f| -%>

  <div class="field">
    <%= f.hidden_field(:employee_id, :value=>:current_employee) %>
  </div>
  <div class="field">
    <%= f.label :response %> 
    <%= f.text_field :response %>
  </div>

  <%= f.submit %>
<% end -%>

