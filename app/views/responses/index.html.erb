<h1>Responses to Request</h1>

<table>
  <tr>
    <th>Request ID</th>
    <th>Employee ID</th>
    <th>Response</th>

  </tr>

  <% @responses.each do |response| %>
  <tr>
    <td><%= response.request_id %></td>
    <td><%= response.employee_id %></td>
    <td><%= response.response %></td>
  </tr>
  <% end %>
</table>

  <% @request.responses.each do |response| %>     
  <tr> 
      <td><%= response.employee.name %></td>
  </tr>
    <% end %>

